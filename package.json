{
  "name": "bounce-classic-standalone",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "dependencies": {
    "phaser": "^3.80.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "esbuild": "^0.23.0",
    "eslint": "^9.35.0",
    "prettier": "^3.6.2",
    "typescript": "^5.4.0"
  },
  "scripts": {
    "dev": "npx -y esbuild src/main.ts --bundle --outfile=public/bundle.js --servedir=public --sourcemap --watch=forever",
    "build": "npx -y esbuild src/main.ts --bundle --outfile=pages/bundle.js --minify --sourcemap && cp public/index.html pages/index.html",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts"
  }
}
